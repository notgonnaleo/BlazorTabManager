@page "/"
@using System.Reflection

@_renderFragment

@code
{
    [Parameter] public Type SelectedTab { get; set; }
    [Parameter] public object Data { get; set; }

    private RenderFragment _renderFragment => builder =>
    {
        if (SelectedTab != null)
        {
            builder.OpenComponent(0, SelectedTab); // Dynamically create the component
            builder.CloseComponent();
        }
    };
}
